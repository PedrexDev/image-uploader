<%- include('partials/header', { title: 'Edit Image' }) %>

<div class="container py-5">
  <h2 class="mb-4 text-center">Edit Image</h2>

  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card rounded-4 shadow-sm">
        <div class="card-body">
          <form action="/gallery/edit/<%= upload._id %>" method="POST">
            <div class="mb-3">
              <label for="title" class="form-label">Title</label>
              <input type="text" id="title" name="title" class="form-control" value="<%= upload.title %>" required>
            </div>

            <div class="mb-3">
              <label for="description" class="form-label">Description</label>
              <textarea id="description" name="description" class="form-control" rows="3"><%= upload.description %></textarea>
            </div>

            <div class="mb-3">
              <img src="/uploads/<%= upload.filename %>" alt="Uploaded Image" class="img-fluid rounded">
            </div>

            <div class="d-flex justify-content-between">
              <a href="/gallery" class="btn btn-secondary">Cancel</a>
              <button type="submit" class="btn btn-primary">Save Changes</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('partials/footer') %>